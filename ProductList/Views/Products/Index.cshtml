@model List<Product>
<table class="table table-bordered table-stripped">

    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach(Product product in @Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@($"{product.Price:C}")</td>
                <td><a asp-controller="Products" asp-action="Details" asp-route-slug="@product.Slug">View Details</a></td>
            </tr>
        }
        
    </tbody>

</table>

